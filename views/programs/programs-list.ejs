<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= page_title %></title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <!-- component -->
    <style>
      /* Custom style */
      .header-right {
        width: calc(100% - 3.5rem);
      }
      .sidebar:hover {
        width: 16rem;
      }
      @media only screen and (min-width: 768px) {
        .header-right {
          width: calc(100% - 16rem);
        }
      }
    </style>
    <div x-data="setup()">
      <div
        class="min-h-screen flex flex-col flex-auto flex-shrink-0 antialiased bg-white text-black"
      >
        <!-- Header -->
        <%- include('../partials/navbar'); %>
        <!-- ./Header -->

        <!-- Sidebar -->
        <%- include('../partials/sidebar'); %>
        <!-- ./Sidebar -->

        <div class="h-full px-12 py-6 mt-14 mb-10 md:ml-64">
          <!-- List -->
          <div class="overflow-x-auto">
            <div
              class="flex items-center justify-center font-sans overflow-hidden"
            >
              <div class="w-full lg:w-5/6">
                <a
                  href="/programs/create"
                  class="border border-2 border-[#39a4ac] font-semibold py-2 px-6 text-gray-600 inline-block duration-500 ease-in-out rounded hover:bg-[#39a4ac] hover:text-white"
                >
                  Add Program
                </a>

                <div class="bg-white shadow-md rounded my-6">
                  <table class="min-w-max w-full table-auto">
                    <thead>
                      <tr
                        class="bg-[#39a4ac] text-white uppercase text-sm leading-normal"
                      >
                        <th class="py-3 px-6 text-center">Id</th>
                        <th class="py-3 px-6 text-center">Program</th>
                        <th class="py-3 px-6 text-center">
                          Description
                        </th>
                        <th class="py-3 px-6 text-center">Cost</th>
                        <th class="py-3 px-6 text-center">Schedule</th>
                        <th class="py-3 px-6 text-center">Action</th>
                      </tr>
                    </thead>
                    <tbody class="text-gray-600 text-xs font-light">
                      <% if(data.length) { for (let i = 0; i < data.length; i++)
                      { %>
                      <tr class="border-b border-gray-200 hover:bg-gray-100">
                        <td
                          class="py-3 px-6 text-center whitespace-nowrap"
                        >
                          <span class="font-medium"><%= data[i].id %></span>
                        </td>
                        <td class="py-3 px-6 text-center">
                          <span><%= data[i].program_name %></span>
                        </td>
                        <td class="py-3 px-6 text-center">
                          <span><%= data[i].program_description %></span>
                        </td>
                        <td class="py-3 px-6 text-center">
                          <span><%= data[i].program_cost %></span>
                        </td>
                        <td class="py-3 px-6 text-center">
                          <span><%= data[i].schedule %></span>
                        </td>
                        <td class="py-3 px-6 text-center">
                          <div class="flex item-center justify-center">
                            <a
                              href="/programs/edit/<%= data[i].id %>"
                              class="w-4 mr-2 transform hover:text-[#39a4ac] hover:scale-110"
                            >
                              <svg
                                xmlns="http://www.w3.org/2000/svg"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                              >
                                <path
                                  stroke-linecap="round"
                                  stroke-linejoin="round"
                                  stroke-width="2"
                                  d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"
                                />
                              </svg>
                            </a>
                            <a
                              href="/programs/delete/<%= data[i].id %>"
                              class="w-4 mr-2 transform hover:text-[#39a4ac] hover:scale-110"
                            >
                              <svg
                                xmlns="http://www.w3.org/2000/svg"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                              >
                                <path
                                  stroke-linecap="round"
                                  stroke-linejoin="round"
                                  stroke-width="2"
                                  d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
                                />
                              </svg>
                            </a>
                          </div>
                        </td>
                      </tr>

                      <% } } else { %>
                      <tr>
                        <td
                          colspan="7"
                          class="px-4 py-3 font-semibold text-center"
                        >
                          NO PROGRAMS DATA
                        </td>
                      </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
          <!-- ./List -->
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.8.0/dist/alpine.min.js"
      defer
    ></script>
  </body>
</html>
